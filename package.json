{
  "name": "turbodbx",
  "version": "1.0.0",
  "description": "Universal database converter: SQL ↔ NoSQL ↔ JSON",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "core"
  ],
  "scripts": {
    "dev": "concurrently -k -n \"backend,frontend\" -c \"blue,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=core && npm run build --workspace=backend && npm run build --workspace=frontend",
    "clean": "rm -rf node_modules */node_modules */dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
